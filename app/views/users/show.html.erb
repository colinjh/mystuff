<%- model_class = User -%>
<div class="page-header">
  <h1><%= @user.name.capitalize %></h1>
</div>
<div class="row">
      
  <div class="col-md-12">
    <div class="row masonry-container">
      <% @user.products.each do |product| %>
        <div class="col-md-4 col-sm-6 item">
          <div class="thumbnail">
        <%= link_to(image_tag(product.image, :class => 'preview'), product) %> 
        </div>
      </div>  
      <% end %>
    </div>
  </div>
</div>
