- if flash[:error].present?
  %h2= flash[:error]

= form_tag '/login' do
  %div.form-group
    = label_tag 'Email'
    = text_field_tag :email, nil, :autofocus => true, :required => true
  %div.form-group
    = label_tag 'Password'
    = password_field_tag :password, nil, :required => true
    = submit_tag 'Login', :class => 'form control'