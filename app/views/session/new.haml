- if flash[:error].present?
  %h2= flash[:error]

= form_tag '/login' do
  %div.form-group
    = label_tag 'Email' 
    %div.col-lg-10  
      = text_field_tag :email, nil, :autofocus => true, :required => true, :class => 'form control' 
  %div.form-group
    = label_tag 'Password'
    %div.col-lg-10   
      = password_field_tag :password, nil, :required => true, :class => 'form control'
    = submit_tag 'Login', :class => 'form control'