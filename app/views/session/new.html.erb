<%=form_tag '/login', :html => { :class => "form-horizontal session" } do %>
 <% if flash[:error].present? %>
   <h2><%= flash[:error] %></h2>
 <% end %>
 <div class="form-group">
   <%= label_tag 'Email', nil, :class => 'control-label col-lg-2'%>
   <div class="col-lg-10">
       <%= text_field_tag :email, nil, :placeholder => 'Email' %>
   </div>
 </div>
 <div class="form-group" >
   <%= label_tag 'Password', nil, :class => 'control-label col-lg-2'%>
   <div class="col-lg-10">        
     <%= password_field_tag :password, nil, :placeholder => 'Password' %>
   </div>
 </div>
 <p>&nbsp;</p>
 <div class="form-group">
   <div class="login col-lg-offset col-lg-1">
     <%= submit_tag 'Login', :class => 'btn btn-primary btn-xl' %>
   </div>
 </div>
<% end %>