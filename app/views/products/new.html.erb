

<h1>New Item</h1>

<%= form_for @product, :html => {:multipart => true} do |f| %>
<p>
  <%= f.label :name %>
  <%= f.text_field :name, :required => true %>
</p>
<p>
  <%=  f.label :description %>
  <%= f.text_field :description, :required => true %>
</p>
<p>
  <%=  f.label :price %>
  <%= f.text_field :price, :required => true %>
</p>
<p>
  <%=  f.label :tags %>
  <%= f.text_field :tags, :required => true, :value => @product.tag_list.join(", ") %>
</p>
<p>
  <%= f.label :image %>
  <%= f.cl_image_upload :image %>
  
</p>


<%= f.submit %>
<% end %>